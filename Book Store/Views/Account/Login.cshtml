@using Book_Store.Data.ViewModels;
@model LoginVM;

@{
    ViewData["Title"] = "Log in to your account";
}
<style>

    body {
        background-image: url('https://www.pixground.com/wp-content/uploads/2023/03/Windows-11-365-Abstract-Purple-Background-Digital-Art-4K-Wallpaper.jpg');
    }
</style>
<div class="row">
    <div class="col-md-6 offset-3 animate__animated animate__fadeInUp" style="border-radius: 50px;background: linear-gradient(145deg, #cacaca, #f0f0f0);box-shadow: 20px 20px 60px #bebebe, -20px -20px 60px #ffffff;padding: 42px;">
        <p>
            <h4>Log in to your account</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" style="border-radius:10px;" placeholder="Email" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" style="border-radius:10px;" placeholder="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-success float-right" type="submit" style="border-radius:15px;" value="Log in" />
                        <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Create new Account</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>