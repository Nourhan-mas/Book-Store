@model Book_Store.Models.Author

@{
    ViewData["Title"] = "Add a anew Author";
}

<html>
<head>
    <title>Add a New Author</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f6f9fc;
        }

        .card {
            margin-top: 50px;
            border-radius: 15px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #4b7bec;
            color: #fff;
            border-radius: 15px 15px 0 0;
        }

        .card-title {
            margin-bottom: 0;
        }

        .form-group {
            margin-bottom: 25px;
        }

        label {
            font-weight: 600;
        }

        #ProfilePicturePreview {
            max-width: 150px;
            border-radius: 50%;
            border: 3px solid #4b7bec;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title text-center">Add a New Author</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group text-center">
                                <img id="ProfilePicturePreview" src="https://via.placeholder.com/150" alt="Profile Picture" />
                            </div>
                            <div class="form-group">
                                <label asp-for="PictureURL" class="control-label">Profile Picture URL</label>
                                <input asp-for="PictureURL" class="form-control" placeholder="Enter URL" />
                                <span asp-validation-for="PictureURL" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">Author's Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Bio" class="control-label">Author's Bio</label>
                                <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Enter Bio"></textarea>
                                <span asp-validation-for="Bio" class="text-danger"></span>
                            </div>

                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-success">Create</button>
                                <a class="btn btn-secondary" asp-action="Index">Show All</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    
</body>
</html>
