@model Author

@{
	ViewData["Title"] = "Details of the Author";
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card mb-3 custom-card" style="background: rgba(255, 255, 255, 0.2);
                border-radius: 16px;
                box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
                backdrop-filter: blur(5px);
                -webkit-backdrop-filter: blur(5px);
                border: 1px solid rgba(255, 255, 255, 0.3);">

				<div class="card-header text-white bg-gradient">
					<h5 class="card-title custom-title glow" style="color: #000;">
						Details for @Model.Name

					</h5>
				</div>
				<div class="card-body ">
					<div class="text-center">
						<img class="border-info rounded-circle" style="max-width: 150px" src="@Model.PictureURL" />
					</div>

					<div>
						<label><b>Name:</b></label>
						<p>@Model.Name</p>
					</div>

					<div>
						<label><b>Bio:</b></label>
						<p>@Model.Bio</p>
					</div>

					<div class="form-group">
						@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
						{
							<a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
						}
						<a class="btn btn-secondary" asp-action="Index">Show All</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
}